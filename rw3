            output_file.write(f"Loop {i + 1} - Slot Capabilities for {specific_bus_bridge_18}: {current_slot_capabilities_18}\n")
            output_file.write(f"Loop {i + 1} - Link Capabilities for {specific_bus_link_18}: {current_link_capabilities_18}\n")
            output_file.write(f"Loop {i + 1} - Secondary Bus Number for {specific_bus_bridge_18}: {format_bdf(read_secondary_bus_number(specific_bus_bridge_18))}\n")

